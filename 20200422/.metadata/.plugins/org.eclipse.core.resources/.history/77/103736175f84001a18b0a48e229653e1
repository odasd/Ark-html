<body>
	<h1>[영화 검색]</h1>
	<div id="search">
		검색수 <span id="total"></span>
		<input type="text" id=txtSearch value="터미네이터">
		<input type="button" id="btnSearch" value="저장">
		<input type="button" id="btnSave" value="선택저장">
	</div>
	<table id="tbl"></table>
	<script id="temp" type="text/x-handlebars-template">
			<tr id=header>
				<td><input type="checkbox" id=chkAll></td>
				<th>제목</th>
				<th>주연배우</th>
				<th>저장</th>
			</tr>
		{{#each items}}
			
			<tr class=row>
				<td><input type="checkbox" class=chk></td>
				<td><div class=title>{{{title}}}</div></td>
				<td><div class=actor>{{{actor}}}</div></td>
				<td><button>저장</button></td>
			</tr>
		{{/each}}
	</script>
</body>
<script>
	var display=10;
	var start=1;
	getlist();
	
	$("#tbl").on("click", ".row button", function(){
		if(confirm("저장하시겠습니까?")==false) return;
		var row=$(this).parent().parent();
		var title=row.find(".title").html();
		var actor=row.find(".actor").html();
	});
	$("#btnSearch").on("click", function(){
		getlist();
	});
	
	$("#txtSearch").keydown(function(key){
		if(key.keyCode==13){
		getlist();
	}
	});
	
	function getlist(){
		
		var query=$("#txtSearch").val();
		
		$.ajax({
			type:"get",
			url:"movie.jsp",
			data:{"query": query, "display" : display, "start": start},
			dataType:"json",
			success:function(data){
			var temp = Handlebars.compile($("#temp").html());
            $("#tbl").html(temp(data));   
			}
		});
	}
</script>
</html>